#!/usr/bin/zsh

# ls
alias ls="lsd"
alias ll="lsd -lhX"
alias la="lsd -lAhX"

# other
alias exp="explorer.exe"
alias vi="nvim"
alias tree="tre -a"
alias bat="batcat"
alias du="ncdu"
alias fcd='cd $(find . -type d | fzf)'
alias grep="grep --color=auto"
alias mysql="mysql --help"
alias src="source $HOME/.zshrc"
alias update="sudo apt update && sudo apt upgrade"
